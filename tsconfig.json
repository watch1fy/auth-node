{
  "compilerOptions": {
    "baseUrl": "./",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2022",
    "outDir": ".build",
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "ESNext", "ES6", "ES7"],
    "rootDir": "./"
  },
  "include": ["./**/*"]
}